{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb-base"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "legacyDecorators": true
        }
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": 0,
        "import/no-extraneous-dependencies": [
            "error",
            { "devDependencies": true }
        ]
    },
    "settings": {
        "import/resolver": {
          "alias": {
            "map": [
                ["src", "./src"]
             ],
             "extensions": [".js"]
          }
        }
    }
}
